{
    "workbench.colorTheme": "Material Theme Darker High Contrast",
    "workbench.iconTheme": "material-icon-theme",
    "editor.renderWhitespace": "all",
    "editor.wordWrap": "on", 
    "workbench.colorCustomizations": {
      "statusBar.foreground": "#00ffb3",
      "sideBarSectionHeader.foreground":"#ceebd3",
      "sideBarSectionHeader.background": "#293c3f", 
      "editor.selectionBackground": "#a9b0b383",
      "editor.selectionHighlightBackground": "#a9b0b383"
  },
    "editor.tokenColorCustomizations": {
      "textMateRules": [{
		"scope": [
			"punctuation.definition.comment",
			"comment.block",
			"comment.line",
			"comment.block.documentation"
		],
          "settings": {
            "fontStyle": "italic",
            "foreground": "#3caf6c",
          }
      }]
  },
  "files.enableTrash": false
}
